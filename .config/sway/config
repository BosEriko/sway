# Set the output resolution
output * resolution 1920x1080

# Rebind mod4
exec /usr/bin/xmodmap -e "remove mod1 = Alt_R"
exec /usr/bin/xmodmap -e "remove mod4 = Super_L"
exec /usr/bin/xmodmap -e "remove mod4 = Super_R"
exec /usr/bin/xmodmap -e "add mod4 = Alt_R"

# Focus windows
# bindsym Mod1+h focus left
# bindsym Mod1+j focus down
# bindsym Mod1+k focus up
# bindsym Mod1+l focus right

# Move windows
# bindsym Shift+Mod1+h swap left
# bindsym Shift+Mod1+j swap down
# bindsym Shift+Mod1+k swap up
# bindsym Shift+Mod1+l swap right

# Focus workspace (space)
bindsym Mod1+1 workspace 1
bindsym Mod1+2 workspace 2
bindsym Mod1+3 workspace 3
bindsym Mod1+4 workspace 4
bindsym Mod1+5 workspace 5
bindsym Mod4+6 workspace 6
bindsym Mod4+7 workspace 7
bindsym Mod4+8 workspace 8
bindsym Mod4+9 workspace 9
bindsym Mod4+0 workspace 10

# Move workspace
# bindsym Mod5+1 move container to workspace 1; workspace 1
# bindsym Mod5+2 move container to workspace 2; workspace 2
# bindsym Mod5+3 move container to workspace 3; workspace 3
# bindsym Mod5+4 move container to workspace 4; workspace 4
# bindsym Mod5+5 move container to workspace 5; workspace 5
# bindsym Mod5+6 move container to workspace 6; workspace 6
# bindsym Mod5+7 move container to workspace 7; workspace 7
# bindsym Mod5+8 move container to workspace 8; workspace 8
# bindsym Mod5+9 move container to workspace 9; workspace 9
# bindsym Mod5+0 move container to workspace 10; workspace 10

# Applications
bindsym Shift+Mod1+2 workspace 2; exec foot

# Start Waybar automatically
exec --no-startup-id /home/deck/.nix-profile/bin/waybar
