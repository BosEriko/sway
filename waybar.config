{
  "position":"top",
  "exclusive":"true",
  "passthrough":"true",
  "gtk-layer-shell":"true",
  "margin-top":10,
  "margin-left":10,
  "margin-right":10,
  "height":41,

  "modules-left":[
    "custom/weather",
    "cpu",
    "memory",
    "disk"
  ],

  "modules-center":[
    "sway/workspaces"
  ],

  "modules-right":[
    "pulseaudio",
    "pulseaudio#microphone",
    "clock",
    "separator",
    "tray"
  ],

  "tray":{
    "icon-size":16,
    "icon-theme":"Papirus",
    "spacing":2
  },

  "separator":{
    "format":" | "
  },

  "sway/window":{
    "format":"{}",
    "max-length":35
  },

  "sway/workspaces":{
    "format":"{icon}",
    "on-click":"activate",
    "format-icons":{
      "1":"",
      "2":"",
      "3":"",
      "4":"",
      "5":"",
      "6":"",
      "7":"",
      "8":"",
      "9":"",
      "focused":"",
      "urgent":"",
      "default":""
    },
    "sort-by-number":true
  }
}
